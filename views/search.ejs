<body>
    <div id="nav-bar">
    <ul>
        <li><a href="/">Home</a></li>
        <li><a href="/search">Search</a></li>
        <li><a href="/signup">Sign Up</a></li>
        <li><a href="/login">Login</a></li>
    </ul>
    </div>
    <div id="main">
    <form action="/search" method="post">
    <input type="search" id="city-search" placeholder="Enter city name" name="citysearch">
    <input type="search" id="medicine-search" name="medsearch" placeholder="Enter medicine name">
    <input type="submit" value="Search" id="search-btn"> 
    </div>
    <table>
        <tr>
            <th>Pharmacy Name</th>
            <th>Address</th>
            <th>Contact</th>
        </tr>
        <% var data %>
        <% if (data!==undefined){%>
        <% for(var i=0;i< data.length;i++){ %>
            <tr>
                <td><%=data[i].name %></td>
                <td><%=data[i].address %></td>
                <td><%= data[i].contact %></td>
            </tr>
            <% } %>
        <% } else if(data===undefined){ %>
            <% console.log("Data not recieved") %>
            <% } %>
    </table>
</form>